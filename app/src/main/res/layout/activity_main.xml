<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ankit.easyattendance.MainActivity">

    <LinearLayout android:orientation="horizontal" android:layout_height="fill_parent" android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scrollbarSize="1dp">
        <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/aoa"
                style="@style/Widget.AppCompat.Button"
                android:background="@android:color/background_light"
                android:text="AOA"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                android:paddingLeft="25dp"
                android:onClick="aoa" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dbms"
                style="@style/Widget.AppCompat.Button"
                android:background="@android:color/background_light"
                android:text="DBMS"
                android:textAlignment="textStart"
                android:paddingLeft="25dp"
                android:layout_gravity="start"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                android:paddingStart="25dp"
                android:onClick="dbms" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/coa"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button"
                android:background="@android:color/background_light"
                android:text="COA"
                android:textAlignment="textStart"
                android:paddingStart="25dp"
                android:paddingLeft="25dp"
                android:layout_gravity="start"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                android:onClick="coa" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button"
                android:background="@android:color/background_light"
                android:text="TOC"
                android:textAlignment="textStart"
                android:paddingStart="25dp"
                android:paddingLeft="25dp"
                android:layout_gravity="start"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                android:id="@+id/toc"
                android:onClick="toc" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button"
                android:background="@android:color/background_light"
                android:text="CG"
                android:textAlignment="textStart"
                android:paddingStart="25dp"
                android:paddingLeft="25dp"
                android:layout_gravity="start"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                android:id="@+id/cg"
                android:onClick="cg" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button"
                android:background="@android:color/background_light"
                android:text="AM-IV"
                android:textAlignment="textStart"
                android:paddingStart="25dp"
                android:paddingLeft="25dp"
                android:layout_gravity="start"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                android:id="@+id/am4"
                android:onClick="am4" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button"
                android:background="@android:color/background_light"
                android:text="TOTAL"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:paddingStart="25dp"
                android:paddingLeft="25dp"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                android:id="@+id/total" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button"
                android:background="@android:color/background_light"
                android:text="Special Events"
                android:textAlignment="textStart"
                android:paddingStart="25dp"
                android:paddingLeft="25dp"
                android:layout_gravity="start"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                android:id="@+id/spev"
                android:onClick="spEv" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button"
                android:background="@android:color/background_light"
                android:text="MISSED TUTS AND PRACS"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:paddingStart="25dp"
                android:paddingLeft="25dp"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                android:id="@+id/misstut"
                android:onClick="missTut" />

        </LinearLayout>
        </HorizontalScrollView>
        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:scrollbarSize="1dp">
        <LinearLayout android:layout_height="fill_parent" android:layout_width="wrap_content"
            android:orientation="vertical"
            android:scrollbarSize="0dp">

            <Button
                android:text="0%"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:id="@+id/perc_aoa"
                android:textSize="24sp"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                style="@style/Widget.AppCompat.Button"
                android:textStyle="normal|bold"
                android:background="@android:color/background_light"
                android:paddingRight="20dp"
                android:onClick="aoa" />
            <Button
                android:text="0%"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:id="@+id/perc_dbms"
                android:textSize="24sp"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                style="@style/Widget.AppCompat.Button"
                android:textStyle="normal|bold"
                android:background="@android:color/background_light"
                android:paddingRight="20dp"
                android:onClick="dbms" />
            <Button
                android:text="0%"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:id="@+id/perc_coa"
                android:textSize="24sp"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                style="@style/Widget.AppCompat.Button"
                android:textStyle="normal|bold"
                android:background="@android:color/background_light"
                android:paddingRight="20dp"
                android:onClick="coa" />
            <Button
                android:text="0%"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:id="@+id/perc_toc"
                android:textSize="24sp"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                style="@style/Widget.AppCompat.Button"
                android:textStyle="normal|bold"
                android:background="@android:color/background_light"
                android:paddingRight="20dp"
                android:onClick="toc" />
            <Button
                android:text="0%"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:id="@+id/perc_cg"
                android:textSize="24sp"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                style="@style/Widget.AppCompat.Button"
                android:textStyle="normal|bold"
                android:background="@android:color/background_light"
                android:paddingRight="20dp"
                android:onClick="cg" />
            <Button
                android:text="0%"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:id="@+id/perc_am4"
                android:textSize="24sp"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                style="@style/Widget.AppCompat.Button"
                android:textStyle="normal|bold"
                android:background="@android:color/background_light"
                android:paddingRight="20dp"
                android:onClick="am4" />

            <Button
                android:text="0%"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:id="@+id/perc_total"
                android:textSize="24sp"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                style="@style/Widget.AppCompat.Button"
                android:textStyle="normal|bold"
                android:background="@android:color/background_light"
                android:paddingRight="20dp" />

            <Button
                android:text="0"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:id="@+id/perc_spev"
                android:textSize="24sp"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                style="@style/Widget.AppCompat.Button"
                android:textStyle="normal|bold"
                android:background="@android:color/background_light"
                android:paddingRight="20dp"
                android:onClick="spEv" />
            <Button
                android:text="0"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:id="@+id/perc_misstut"
                android:textSize="24sp"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                style="@style/Widget.AppCompat.Button"
                android:textStyle="normal|bold"
                android:background="@android:color/background_light"
                android:paddingRight="20dp"
                android:onClick="missTut" />
        </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</RelativeLayout>
